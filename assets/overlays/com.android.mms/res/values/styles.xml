<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/textt</item>
    </style>
    <style name="ListViewStyle" parent="@android:style/Widget.Material.ListView">
        <item name="android:overScrollMode">always</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="ContactListFilterTheme" parent="@android:style/Theme.Material">
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>

    <style name="BackgroundOnlyTheme" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@*common:color/status</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoDisplay">true</item>
    </style>
    <style name="MmsTheme" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/MmsActionBarStyle</item>
        <item name="android:colorPrimary">@color/mms_theme_color</item>
        <item name="android:colorPrimaryDark">@color/mms_theme_color_dark</item>
        <item name="android:colorAccent">@color/mms_theme_color_accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/mms_theme_color_dark_t</item>
    </style>
    <style name="MmsHoloTheme" parent="@android:style/Theme.Material" />
    <style name="HeaderTheme" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:spinnerDropDownItemStyle">@style/HeaderSpinnerDropDown</item>
        <item name="android:colorAccent">?android:textColorPrimary</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Dark</item>
    </style>
    <style name="HeaderTabText" parent="@android:style/Widget.Material.ActionBar.TabText">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="HeaderSpinnerDropDown"
        parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="MmsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/mms_theme_color_t</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
    </style>
    <style name="WidgetTitle"
        parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NotificationPrimaryText">
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="NotificationSecondaryText">
        <item name="android:textColor">@color/textt</item>
    </style>
    <style name="NotificationSubjectText">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/text</item>
        <item name="android:textColorHint">@color/textt</item>
        <item name="android:textColorLink">@color/textt</item>
    </style>
    <style name="TextAppearance.SearchResult" parent="@style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/textt</item>
    </style>
    <style name="TextAppearance.SearchResult.Subtitle" parent="@style/TextAppearance.SearchResult">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textt</item>
    </style>

    <style name="TextShadowLight">
        <item name="android:textColor">@color/text</item>
        <item name="android:shadowColor">@color/text_shadow_color_light</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
</resources>
