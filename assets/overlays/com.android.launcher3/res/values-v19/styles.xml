<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WallpaperCropper" parent="@android:style/Theme.Material.Wallpaper">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/WallpaperCropperActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="WallpaperCropperActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">#90000000</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="Theme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
