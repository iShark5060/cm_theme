    <item android:bottom="@dimen/phone_bottom_padding" android:left="@dimen/phone_side_padding"
        android:right="@dimen/phone_side_padding">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
</layer-list>